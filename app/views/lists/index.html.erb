<div class="container">
</div>

<div class="banner-container">
  <%= image_tag "daniel-guerra-MjZwrERreuY-unsplash.jpg",
                alt: "Description",
                class: "banner-image" %>
  <h1 class="banner-title">Save any kind of movies</h1>
</div>

<div class="container">
  <h1>My Lists</h1>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-info" %>
  <br><br>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="card" style="width: 18rem;">
        <%= link_to image_tag("", alt: "Card"), list_path(list) %>
        <div class="card-body">
          <h5 class="card-title"><%= list.name %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>
